<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_width" android:layout_height="@dimen/card_height"
    android:id="@+id/cardtemplate"   >
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"  >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="card0"
            android:background = "@android:color/transparent"
            android:src="@drawable/redcard"
            android:id="@+id/cardImg"
            android:adjustViewBounds="true" >
        </ImageView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carddesc"
            android:textStyle="bold"
            android:textSize="9pt"
            android:layout_marginTop= "20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:elegantTextHeight="false">
        </TextView>
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardlabel"

            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="5dp"
            android:layout_alignTop="@+id/redcard"
            android:layout_marginTop="20dp"
            android:layout_marginRight="23dp"
            android:rotation="270"
            >
        </TextView>
    </FrameLayout>
</RelativeLayout>